[user]
	email = code@jall.me
	name = Jon Hall
[color]
	status = true
	ui = true
[core]
	excludesfile = ~/.gitignore_global
	autocrlf = input
[push]
	default = simple
[pull]
	rebase = true
[alias]
	alias = config --get-regexp ^alias\\.
	amend = commit --amend
	br = branch
	co = commit -v
	ch = checkout
	ignored = !git ls-files -v | grep "^[[:lower:]]"
	last = log -1 HEAD
	nuke = !git reset --hard && git clean -df
	prune-local = !git branch --merged | tr -d '*' | grep -v dev | xargs -n1 git branch -d
	undo = checkout HEAD --
	unstage = reset HEAD --
[includeIf "gitdir:~/Work/"]
    path = ~/.gitconfig_work
