[user]
	email = code@jall.me
	name = Jon Hall
[color]
	status = true
	ui = true
[core]
	excludesfile = ~/.gitignore_global
	autocrlf = input
[push]
	default = simple
	followTags = true
[pull]
	rebase = true
[alias]
	alias = config --get-regexp ^alias\\.
	amend = commit --amend
	back = checkout -
	br = branch
	co = commit -v
	ch = checkout
	hidden = !git ls-files -v | grep '^S'
	hide = update-index --skip-worktree
	unhide = update-index --no-skip-worktree
	last = log -1 HEAD
	nuke = !git reset --hard && git clean -df
	prune-local = !git branch --merged | tr -d \"*\" | grep -v \"dev\\|develop\\|staging\\|production\\|master\" | xargs -n1 git branch -d
	undo = checkout HEAD --
	unstage = reset HEAD --
	sp = !git stash -u && git pull --rebase && git stash pop
[include]
	path = ~/.gitconfig_local
